#!/usr/bin/bash

if [ -z "$1" ]; then
    echo "⚠️  Aucun message de commit fourni."
    read -p "Veuillez entrer un message de commit : " commit
else
    commit="$1"
fi

echo "📂 Ajout des fichiers au suivi Git..."
git add . > /dev/null 2>&1

echo "📝 Création du commit avec le message : '$commit'"
git commit -m "$commit" > /dev/null 2>&1

echo "🚀 Envoi des modifications vers le dépôt distant..."
git push > /dev/null 2>&1

echo "✅ Opération terminée avec succès !"